{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"],
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true
	},
	"include": ["src/**/*", "vite.config.ts"],
	"exclude": ["node_modules", "dist"]
}
